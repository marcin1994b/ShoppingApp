<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:orientation="vertical"
    tools:context="com.example.marcin.shoppingapp.View.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/firstProductTextView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingEnd="40dp"
            android:text="something"
            android:textSize="20sp"/>
        <EditText
            android:id="@+id/firstProductEditText"
            android:layout_width="50dp"
            android:inputType="numberDecimal"
            android:maxLength="3"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/secondProductTextView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingEnd="40dp"
            android:text="something"
            android:textSize="20sp"/>
        <EditText
            android:id="@+id/secondProductEditText"
            android:layout_width="50dp"
            android:inputType="numberDecimal"
            android:maxLength="3"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/thirdProductTextView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingEnd="40dp"
            android:text="something"
            android:textSize="20sp"/>
        <EditText
            android:id="@+id/thirdProductEditText"
            android:layout_width="50dp"
            android:inputType="numberDecimal"
            android:maxLength="3"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/fourthProductTextView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingEnd="40dp"
            android:text="something"
            android:textSize="20sp"/>
        <EditText
            android:id="@+id/fourthProductEditText"
            android:layout_width="50dp"
            android:inputType="numberDecimal"
            android:maxLength="3"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/fifthProductTextView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingEnd="40dp"
            android:text="something"
            android:textSize="20sp"/>
        <EditText
            android:id="@+id/fifthProductEditText"
            android:layout_width="50dp"
            android:inputType="numberDecimal"
            android:maxLength="3"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp">
        <TextView
            android:id="@+id/firstBonusTextView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingEnd="40dp"
            android:text="Kup 2 jogurty, trzeci gratis."
            android:textSize="20sp"
            android:maxLines="1" />
        <CheckBox
            android:id="@+id/firstBonusCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/secondBonusTextView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingEnd="40dp"
            android:text="Kup 2 jogurty, trzeci gratis."
            android:textSize="20sp"
            android:maxLines="1" />
        <CheckBox
            android:id="@+id/secondBonusCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/thirdBonusTextView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingEnd="40dp"
            android:text="Kup 2 jogurty, trzeci gratis."
            android:textSize="20sp"
            android:maxLines="1" />
        <CheckBox
            android:id="@+id/thirdBonusCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"/>
    </LinearLayout>

    <TextView
        android:id="@+id/costTextView"
        android:gravity="center"
        android:layout_marginTop="35dp"
        android:text = "0.33"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="35dp"
        android:text="Podlicz"/>

</LinearLayout>
